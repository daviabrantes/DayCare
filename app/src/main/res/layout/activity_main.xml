<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_savana"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:shadowColor="@android:color/holo_green_dark"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:srcCompat="@drawable/savana" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="6dp"
        android:layout_marginLeft="15dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:layout_marginTop="10dp"
        android:text="Savana's Daycare"
        android:textColor="@android:color/white"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:shadowColor="@android:color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:layout_marginStart="15dp"
        android:text="For dogs"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_phone"
        android:shadowColor="@android:color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:text="Let your best friend have the time of his life!"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/textView5"
        android:drawableStart="@drawable/ic_local_phone_white_24dp"
        android:drawablePadding="6dp"
        android:layout_marginStart="15dp"
        android:text="Phone: +55 13 3222-2323"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email_white_24dp"
        android:drawablePadding="6dp"
        android:layout_alignParentBottom="true"
        android:text="Email: savana.golden@gmail.com"
        android:textColor="@android:color/white"
        android:layout_marginTop="6dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="30dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:textSize="14sp" />

</RelativeLayout>